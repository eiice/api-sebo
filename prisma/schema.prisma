generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id       String  @id @default(uuid())
    name     String
    email    String  @unique
    password String
    status   String
    type     String
    area     String?
}

model Item {
    id           String @id @default(uuid())
    title        String
    author       String
    category     String
    price        Float
    description  String
    status       String
    creationDate String
    periodicity  String
    sellerId     String
}

model Category {
    id          String @id @default(uuid())
    name        String
    description String
    status      String
}
